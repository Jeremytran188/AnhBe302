<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.worldwise.worldwise.UserAccountController"
            prefWidth="900" prefHeight="600">

    <!-- Top: Title -->
    <top>
        <Label text="User Account"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10;" />
    </top>

    <!-- Center: Tabs -->
    <center>
        <TabPane fx:id="accountTabPane" tabClosingPolicy="UNAVAILABLE">

            <!-- Tab 1: User Details -->
            <Tab text="User Details">
                <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20;">
                    <Label text="User details form will go here." />
                </VBox>
            </Tab>

            <!-- Tab 2: My Game History -->
            <Tab text="My Game History">
                <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
                    <TableView fx:id="historyTable" prefHeight="450" prefWidth="850">
                        <columns>
                            <TableColumn fx:id="modeColumn" text="Mode" prefWidth="150"/>
                            <TableColumn fx:id="topicColumn" text="Topic" prefWidth="200"/>
                            <TableColumn fx:id="scoreColumn" text="Score" prefWidth="100"/>
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="200"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

        </TabPane>
    </center>
</BorderPane>
